<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/selector_custom_btn"
    android:layout_height="@dimen/member_card_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_tree_image"
        android:layout_width="@dimen/storte_image_size"
        android:layout_height="@dimen/storte_image_size"
        android:layout_margin="@dimen/margin_10"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:background="@drawable/input_border_bg"/>

    <TextView
        android:id="@+id/tv_grow_tip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/dark_gray_text_color"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/spacing_04"
        tools:text="Tên Cây"
        android:textStyle="bold"
        android:layout_alignTop="@+id/im_tree_image"
        android:layout_alignLeft="@+id/tv_description"
        android:layout_alignStart="@+id/tv_description"
        fontPath="fonts/FallingSkyBd.otf"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_05"
        android:layout_toRightOf="@+id/im_tree_image"
        android:layout_below="@+id/tv_grow_tip_name"
        android:text="temp text"
        android:textSize="@dimen/font_12"
        android:textColor="@color/dark_gray_text_color"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fontPath="fonts/FallingSkyBd.otf"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"/>

</RelativeLayout>
