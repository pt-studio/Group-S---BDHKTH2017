<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white_100"
        app:cardCornerRadius="@dimen/radius_08">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_100">

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center"
                android:textSize="@dimen/font_16"
                android:textStyle="bold"
                android:textColor="@color/dark_gray_text_color"
                android:lineSpacingExtra="@dimen/spacing_04"
                tools:text="Content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/divider_color"/>

            <TextView
                android:id="@+id/text_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_custom_btn"
                android:text="@string/dialog_button_confirm_title"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center"
                android:textColor="@color/dark_blue_normal"
                android:textSize="@dimen/font_18" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>