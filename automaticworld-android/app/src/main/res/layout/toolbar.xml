<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_toolbar_height"
    android:layout_gravity="center_horizontal"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:elevation="6dp"
    android:background="@color/transpanrent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transpanrent">

        <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="34dp"-->
            <!--android:src="@drawable/menu"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--android:layout_marginTop="8dp"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--app:layout_constraintRight_toLeftOf="@+id/guideline1"-->
            <!--android:layout_marginRight="8dp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:id="@+id/im_menu" />-->

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="77dp" />

        <ImageView
            android:id="@+id/im_home"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:src="@drawable/home"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="154dp" />

        <ImageView
            android:id="@+id/im_logo"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:src="@drawable/logo_smartpot"
            android:layout_marginRight="@dimen/margin_08"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            app:layout_goneMarginLeft="@dimen/margin_08"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_08"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_08"
            android:layout_marginEnd="@dimen/margin_08"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="231dp" />

        <ImageView
            android:id="@+id/im_search"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:src="@drawable/search"
            android:layout_marginLeft="@dimen/margin_08"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            android:layout_marginRight="@dimen/margin_08"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_08"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_08"
            android:layout_marginStart="@dimen/margin_08"
            android:layout_marginEnd="@dimen/margin_08"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="307dp" />

        <ImageView
            android:id="@+id/im_contact"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:src="@drawable/contact"
            app:layout_constraintLeft_toRightOf="@id/guideline4"
            android:layout_marginLeft="@dimen/margin_08"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/margin_08"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_08"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_08"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>