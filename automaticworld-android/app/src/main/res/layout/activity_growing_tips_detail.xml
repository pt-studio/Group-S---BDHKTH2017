<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context="com.example.andrejlee.smartpotui.ui.activities.growing_tips_detail.GrowingTipsDetailActivity">

    <ImageView
        android:id="@+id/iv_tree_detail"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:src="@drawable/smile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/gradient_shape_upper"
        app:layout_constraintTop_toTopOf="@id/iv_tree_detail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_08"
        android:id="@+id/view">
    </View>

    <View
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/gradient_shape_lower"
        app:layout_constraintBottom_toBottomOf="@id/iv_tree_detail"        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_08"
        app:layout_goneMarginLeft="@dimen/margin_08"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view" />

    <TextView
        android:id="@+id/tv_detail_tree_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Hoa Hong"
        android:textColor="@color/black_100"
        android:textSize="@dimen/font_20"
        android:textAlignment="center"
        android:paddingTop="@dimen/margin_08"
        android:paddingBottom="@dimen/margin_08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_tree_detail"
        android:layout_marginRight="@dimen/margin_08"
        android:layout_marginLeft="@dimen/margin_08"
        fontPath="fonts/FallingSkyBd.otf"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08" />
    
    <com.marshalchen.ultimaterecyclerview.ui.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_08"
        android:src="@drawable/ic_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/margin_08"
        android:layout_marginLeft="@dimen/margin_08"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_tree_name"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:id="@+id/scrollView2">
        <TextView
            android:id="@+id/tv_detail_tree_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dummy_text"
            android:textSize="@dimen/font_18"
            fontPath="fonts/FallingSkyBd.otf"
            android:background="@color/white"/>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
