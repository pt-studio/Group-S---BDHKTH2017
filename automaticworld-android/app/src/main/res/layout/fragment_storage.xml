
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        tools:context="com.example.andrejlee.smartpotui.ui.activities.storage.StorageActivity">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/store_screen_title"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_30"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView12" />

        <TextView
            android:id="@+id/tv_avail_pots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_20"
            android:layout_marginTop="@dimen/margin_30"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginLeft="@dimen/margin_16"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_unavail_pots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_20"
            app:layout_constraintTop_toTopOf="@+id/tv_avail_pots"
            android:layout_marginRight="@dimen/margin_16"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp" />

        <ProgressBar
            android:id="@+id/pb_smart_pots"
            android:progressDrawable="@drawable/custom_progress_bar"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:progress="66"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_avail_pots"
            android:layout_marginLeft="@dimen/margin_25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/margin_25"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/store_smart_title"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_18"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pb_smart_pots"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView13" />

        <TextView
            android:id="@+id/tv_avail_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_20"
            android:layout_marginTop="@dimen/margin_40"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginLeft="@dimen/margin_16"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_unavail_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_20"
            app:layout_constraintTop_toTopOf="@+id/tv_avail_auto"
            android:layout_marginRight="@dimen/margin_16"
            app:layout_constraintRight_toRightOf="parent" />

        <ProgressBar
            android:id="@+id/pb_auto"
            android:progressDrawable="@drawable/custom_progress_bar"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:progress="66"
            android:layout_marginTop="@dimen/margin_08"
            app:layout_constraintTop_toBottomOf="@+id/tv_avail_auto"
            android:layout_marginLeft="@dimen/margin_25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/margin_25"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/store_auto_title"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_18"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pb_auto"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/progress_bar_start"
            android:layout_marginTop="@dimen/margin_40"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="@dimen/margin_60"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_active_state"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_18"
            app:layout_constraintLeft_toRightOf="@+id/textView15"
            android:layout_marginLeft="@dimen/margin_16"
            app:layout_constraintTop_toTopOf="@+id/textView15"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="@dimen/margin_60"
            android:id="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_inactive_state"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/textView16"
            android:layout_marginLeft="@dimen/margin_16"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            android:layout_marginTop="4dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </android.support.constraint.ConstraintLayout>
