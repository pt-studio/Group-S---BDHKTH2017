<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:id="@+id/cl_detail_tree"
    tools:context="com.example.andrejlee.smartpotui.ui.activities.detail.DetailTreeActivity">

    <TextView
        android:id="@+id/tv_screen_tree_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:textAlignment="center"
        android:textSize="@dimen/font_30"
        android:textStyle="bold"
        android:textColor="@color/white_100"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_08"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/margin_08"
        app:layout_constraintRight_toRightOf="parent" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/detail_safe_moisture"
        android:textColor="@color/white_100"
        android:textStyle="bold"
        android:textSize="@dimen/font_20"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_tree_name"
        android:layout_marginLeft="@dimen/margin_08"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView9"
        fontPath="fonts/FallingSkyBd.otf"/>
    
    <TextView
        android:id="@+id/tv_safe_moisture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_20"
        android:textColor="@color/white_100"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        fontPath="fonts/FallingSkyBd.otf"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/detail_current_moisture"
        android:textStyle="bold"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_20"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:id="@+id/textView10"
        fontPath="fonts/FallingSkyBd.otf"/>

    <TextView
        android:id="@+id/tv_current_moisture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_20"
        android:textColor="@color/white_100"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        fontPath="fonts/FallingSkyBd.otf"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/detail_device_state"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        android:textColor="@color/white_100"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:id="@+id/textView11"
        fontPath="fonts/FallingSkyBd.otf"/>
    
    
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_20"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        fontPath="fonts/FallingSkyBd.otf"/>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lineChart">

    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/tv_edit_tree"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="@string/detail_update_btn_title"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@+id/lineChart"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        fontPath="fonts/FallingSkyBd.otf"/>

</android.support.constraint.ConstraintLayout>
